{
  "manifest_version": 3,
  "name": "Sapien Pro MSRI",
  "version": "3.0",
  "description": "Auto-cascade injector with Mirror Tier overlay and drift detection.",
  "permissions": [
    "scripting",
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "host_permissions": [
    "https://chat.openai.com/*"
  ],
  "action": {
    "default_title": "Sapien Pro MSRI"
  }
}