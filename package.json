{
  "name": "@si-systems/core",
  "version": "0.1.0",
  "description": "Identity-Aligned System Architecture for Human-AI Interaction",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "dev": "tsx watch src/index.ts",
    "demo": "tsx examples/cli-demo.ts",
    "demo:nlp": "tsx examples/nlp-demo.ts",
    "example": "tsx examples/basic-usage.ts",
    "evaluate": "tsx src/evaluation/run-evaluation.ts",
    "evaluate:hybrid": "tsx src/evaluation/evaluate-hybrid.ts",
    "benchmark": "tsx src/benchmarks/performance-suite.ts",
    "stress-test": "tsx src/benchmarks/stress-test.ts",
    "lint": "eslint src --ext .ts || true",
    "format": "prettier --write \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build && npm test"
  },
  "keywords": [
    "ai",
    "identity",
    "drift-detection",
    "human-ai-interaction",
    "alignment"
  ],
  "author": "David Dunlop",
  "license": "MIT",
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/lru-cache": "^7.10.9",
    "@types/node": "^20.10.0",
    "@types/sentiment": "^5.0.4",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitest/coverage-v8": "^1.6.1",
    "eslint": "^8.55.0",
    "prettier": "^3.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.67.0",
    "@xenova/transformers": "^2.17.2",
    "better-sqlite3": "^12.4.1",
    "lru-cache": "^11.2.2",
    "openai": "^6.7.0",
    "sentiment": "^5.0.2",
    "zod": "^3.22.4"
  }
}
